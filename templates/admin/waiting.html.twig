{% extends 'base.html.twig' %}

{% block title %}Annonces en attente{% endblock %}

{% block body %}
{% for annonce in annonces %}
    <div class="container mt-2">
        <div class="row bg-light rounded">
            <div class="col p-3">
                <h2>{{ annonce.titre }}</h2>
            </div>
            <div class="col mt-auto mb-auto d-flex justify-content-end">
                <a href="{{path('annonce', {'id': annonce.id})}}"><button class="btn btn-success">Accéder à l'annonce</button></a>
            </div>
        </div>
    </div>
    </br>
{% endfor %}
{% endblock %}
