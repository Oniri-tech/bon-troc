{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
        <h1>{{ user.nom }} {{ user.prenom }}</h1>
        <ul>
            <li> {{ user.telephone }} </li>
            <li> {{ user.mail }} </li>
        </ul>
    {% if app.user.id is same as(user.id) or is_granted('ROLE_ADMIN') %}
    <a href="{{path('settings', {'id': user.id})}}">Modifier mes informations</a>
    {% endif %}
    <h2>Mes annonces</h2>
    {% if app.user.id is same as(user.id) %}
        <a href="{{path('new', {'id': user.id})}}"><button class="btn btn-success">Cr√©er une nouvelle annonce</button></a>
    {% endif %}
    {% for annonce in annonces %}
    <ul>
        <li><a href="{{path('annonce', {'id': annonce.id})}}">{{ annonce.titre }}</li>
    </ul>
    {% endfor %}
</div>

{% endblock %}