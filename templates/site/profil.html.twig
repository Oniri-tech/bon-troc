{% extends 'base.html.twig' %}

{% block title %}{{ user.nom }} {{user.prenom}}{% endblock %}

{% block body %}

<div class="container">
        <h1>{{ user.nom }} {{ user.prenom }}</h1>
        <ul>
            <li> {{ user.telephone }} </li>
            <li> {{ user.mail }} </li>
        </ul>
    {% if app.user.id is same as(user.id) or is_granted('ROLE_ADMIN') %}
    <a href="{{path('settings', {'id': user.id})}}">Modifier mes informations</a>
    {% endif %}
    <h2>Mes annonces</h2>
    {% if app.user.id is same as(user.id) %}
        <a href="{{path('new', {'id': user.id})}}"><button class="btn btn-success m-2">Cr√©er une nouvelle annonce</button></a></br>
    {% endif %}
    {% for annonce in annonces %}
    <div class="d-inline-flex flex-wrap bg-light" style="border-radius:5px;">
        <a href="{{path('annonce', {'id': annonce.id})}}" class="m-4">{{ annonce.titre }}</a>
    </div>
    {% endfor %}
</div>

{% endblock %}