{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        
            {{form_start(form)}}
            <div class="row">
                <div class="col-12 col-md-8">
                    {{form_row(form.titre)}}
                </div>
                <div class="col-12 col-md-4">
                    {{form_row(form.type)}}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{form_row(form.contenu, {'attr': {'class': 'input-message'}})}}
                    {{form_row(form.contrepartie, {'attr': {'class': 'input-message'}})}}
                </div>
            </div>
                <button type="submit" class="btn btn-success">Enregistrer</button>
            {{form_end(form)}}
            

            
        
    </div>

{% endblock %}