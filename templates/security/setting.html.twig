{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Le bon Troc{% endblock %}

{% block body %}
    <h1 class="text-center">Inscription</h1>

    {{form_start(form)}}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                {{form_row(form.mail)}}
                {{form_row(form.nom)}}
                {{form_row(form.prenom)}}
                {{form_row(form.telephone)}}
            </div>
            <div class="col-lg-6">
                {{form_row(form.departement, {'attr': {'id': 'departement'}})}}
                {{form_row(form.code_post, {'attr': {'id': 'code_post'}})}}
                {{form_row(form.commune, {'attr': {'id': 'commune'}})}}
            </div>
            <a href="{{path('send_reset_mail')}}"> Changer de mot de passe</a>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-success ml-auto mr-auto">Enregistrer</button>
    </div>
    {{form_end(form)}}
    {% if app.user %}
        {% if app.user.id is same as(user.id) %}
        <div class="fixed-bottom">
            <a href="{{path('deleteUser', {'id':user.id})}}" onclick="return(confirm('Etes-vous sÃ»r de vouloir supprimer votre compte ?'));"><button class="btn btn-secondary">supprimer mon compte</button></a>
        </div>
        {% endif %}
    {% endif %}
{% endblock %}
