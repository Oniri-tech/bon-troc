{% extends 'base.html.twig' %}

{% block title %}Le Bon Coin{% endblock %}

{% block body %}
    <h1>Entrez votre nouveau mot de passe</h1>

    {{form_start(form)}}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                {{form_row(form.password)}}
                {{form_row(form.confirm_password)}}
            </div>
        </div>
        <button type="submit" class="btn btn-success">Enregistrer</button>
    </div>
    {{form_end(form)}}
{% endblock %}