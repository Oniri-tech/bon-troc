{% extends 'base.html.twig' %}

{% block title %}Nouveau Message{% endblock %}

{% block body %}
    <h1 class="text-center">Nouveau Message</h1>
    <h2 class="text-center">Destinataire : {{destinataire.prenom}}<h2>
    {{ form_start(form) }}
    <div class="container">
        {{ form_row(form.contenu, {'attr': {'class': 'input-message'}}) }}
        <button type="submit" class="btn btn-success">Envoyer</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
